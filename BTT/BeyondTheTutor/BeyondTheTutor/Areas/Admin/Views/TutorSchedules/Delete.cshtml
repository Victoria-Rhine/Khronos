@model BeyondTheTutor.Models.TutorSchedule

<body class="wou-silver-bg">
    <div class="ui one column stackable page grid">
        <div class="ui red message schedule"><i class="close icon"></i>Careful! You may delete schedules below. Deletion cannot be undone.</div>
        <div class="ui form attached fluid segment">
            <div class="three fields">
                <div class="field">
                    <h4>Tutor Name &amp; Job</h4>
                    @Html.DisplayFor(model => model.Description)
                </div>
                <div class="field">
                    <h4>Start Date &amp; Time</h4>
                    @Html.DisplayFor(model => model.StartTime)
                </div>
                <div class="field">
                    <h4>End Date &amp; Time</h4>
                    @Html.DisplayFor(model => model.EndTime)
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <button class="fluid ui button schedule" style="margin-bottom: 3px;">Delete Schedule Entry</button>
                    <a href="/Admin/TutorSchedules/UpdateSchedule" button class="fluid ui button schedule">Go Back to List</a>
                </div>
            }
        </div>
    </div>
</body>
