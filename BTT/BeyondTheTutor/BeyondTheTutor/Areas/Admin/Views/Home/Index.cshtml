@model IEnumerable<BeyondTheTutor.Models.TutorSchedule>

@{
    string dayOfTheMonth = (DateTime.Now.Day).ToString();
}

<body class="wou-blue-bg">
    <div class="ui container portal">
        <h2 class="ui top attached center aligned icon header black" style="color:#231f20;">
            <i class="user circle outline icon" style="color:#231f20;"></i>
            Hello @ViewBag.User!
        </h2>
        <div class="ui internally divided padded grid grey">
            @* ----------First row start---------- *@
            <div class="row">
                <div class="three wide column">
                    <div class="ui floating message" style="height: 100%;">
                        <div class="ui card portal">
                            <div class="content">
                                <div class="ui centered block header">
                                    <a id="portal-headers-black" href="/Admin/ElevatedAccount/Index">User Management</a>
                                </div>
                                <div class="description">
                                    <h4 class="ui sub header">Unconfirmed Users</h4>
                                    <div class="ui small feed">
                                        <div class="ui compact menu">
                                            <a class="item">
                                                <i class="icon exclamation"></i> Tutors
                                                @{
                                                    if (ViewBag.tutorsFalse == 0)
                                                    {
                                                        <div class="floating ui green label">@ViewBag.tutorsFalse</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="floating ui red label">@ViewBag.tutorsFalse</div>
                                                    }
                                                }
                                            </a>
                                        </div>
                                        <div class="ui compact menu">
                                            <a class="item">
                                                <i class="icon exclamation"></i> Professors
                                                @{
                                                    if (ViewBag.professorsFalse == 0)
                                                    {
                                                        <div class="floating ui green label">@ViewBag.professorsFalse</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="floating ui red label">@ViewBag.professorsFalse</div>
                                                    }
                                                }
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="ui horizontal divider">
                                    Or
                                </div>
                                <h4 class="ui sub header">Confirmed Users</h4>
                                <div class="ui small feed">
                                    <div class="ui compact menu">
                                        <a class="item">
                                            <i class="icon thumbs up"></i> Tutors
                                            <div class="floating ui green label">@ViewBag.tutorsTrue</div>
                                        </a>
                                    </div>
                                    <div class="ui compact menu">
                                        <a class="item">
                                            <i class="icon thumbs up"></i> Professors
                                            <div class="floating ui green label">@ViewBag.professorsTrue</div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ten wide column">
                    <div class="ui floating message">
                        <img class="ui fluid image" src="@Url.Content("~/Content/images/landscapes_images/" + dayOfTheMonth + ".jpg")" />
                    </div>
                </div>

                <div class="three wide column">
                    <div class="ui floating message" style="height: 100%;">
                        <div class="ui card portal">
                            <div class="content">
                                <div class="ui centered block header">
                                    <a id="portal-headers-black" href="/Admin/TutorSchedules/UpdateSchedule">Tutor Schedules</a>
                                </div>
                                <div class="description">
                                    <div class="ui medium label">@DateTime.Now.DayOfWeek, @DateTime.Now.Date.ToString("MM-dd-yyyy")</div>
                                    <div class="ui small feed">
                                        @foreach (var item in Model)
                                        {
                                            <div class="ui relaxed divided list">
                                                <div class="item">
                                                    <div class="content">
                                                        <a class="header">@Html.DisplayFor(modelItem => item.Tutor.BTTUser.FirstName)</a>
                                                        <div class="description">@item.StartTime.ToString("hh:mm tt") to @item.EndTime.ToString("hh:mm tt")</div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <div class="extra content">
                                            <a href="/Admin/TutorSchedules/UpdateSchedule" button class="fluid ui button">View All Schedules</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* ----------Second row start---------- *@
            <div class="row">
                <div class="three wide column">
                    <div class="ui floating message portal">
                        <div class="ui card portal">
                            <div class="content">
                                <div class="ui centered block header"><p id="portal-headers-black">Users Features Guide</p></div>
                                <div class="description">
                                    Lost? Our <a id="portal-headers" href="/Admin/Home/Guide">guide</a> can help.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ten wide column">
                    <div class="ui four statistics">
                        <div class="statistic">
                            <div class="value">
                                @ViewBag.resourceCount
                            </div>
                            <div class="label">
                                Resources
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                @ViewBag.usersCount
                            </div>
                            <div class="label">
                                Signups
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                <i class="laptop icon"></i> @ViewBag.studentCount
                            </div>
                            <div class="label">
                                Students
                            </div>
                        </div>
                        <div class="statistic">
                            <div class="value">
                                @ViewBag.sessionCount
                            </div>
                            <div class="label">
                                Sessions Completed
                            </div>
                        </div>
                    </div>
                </div>
                <div class="three wide column">
                    <div class="ui floating message">
                        <div class="ui card portal">
                            <div class="content">
                                <div class="ui centered block header"><p id="portal-headers-black">Questions or Concerns?</p></div>
                                <div class="fluid description">
                                    <a href="mailto: beyondthetutor@gmail.com" id="portal-headers">beyondthetutor&commat;gmail.com</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* ----------Third row start---------- *@
            <div class="row">
                <div class="three wide column">
                    <div class="ui floating message">
                        <div class="ui card portal">
                            <img class="ui fluid image" src="@Url.Content("~/Content/images/WOU_arch.jpg")" />
                        </div>
                    </div>
                </div>
                <div class="ten wide column">
                    <a class="weatherwidget-io" href="https://forecast7.com/en/44d85n123d23/monmouth/?unit=us" data-label_1="Western Oregon University" data-label_2="WEATHER" data-font="Roboto Slab" data-icons="Climacons Animated" data-theme="retro-sky">Western Oregon University WEATHER</a>
                </div>
                <div class="three wide column">
                    <div class="ui floating message">
                        <div class="ui card portal">
                            <img class="ui fluid image" src="@Url.Content("~/Content/images/WOU_arch.jpg")" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
}


