@model BeyondTheTutor.Models.Professor

<script type="text/javascript">
    window.onload = function () {

        var check = document.getElementById('AdminApproved');

        check.click();

        var sub = document.getElementById('submitbtn');

        sub.click();
    }
</script>

<div hidden>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Professor</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.AdminApproved, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.AdminApproved)
                        @Html.ValidationMessageFor(model => model.AdminApproved, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="submitbtn" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
}
