@model IEnumerable<BeyondTheTutor.Models.TutorSchedule>

@{ string dayOfTheMonth = (DateTime.Now.Day).ToString(); }

    <body class="wou-blue-bg">
        <div class="ui container portal">
            <h2 class="ui top attached center aligned icon header black" style="color:#231f20;">
                <i class="user circle outline icon" style="color:#231f20;"></i>
                Hello @ViewBag.User!
            </h2>
            <div class="ui internally divided padded grid grey">
                <div class="row">
                    <div class="three wide column">
                        @* Real-time alerts for requested tutoring requests - DO NOT DELETE *@
                        <div class="ui container">
                            <div id="tutor_requests">

                            </div>
                        </div>
                        @* Real-time alerts for requested tutoring requests - DO NOT DELETE *@
                    </div>
                    <div class="ten wide column">
                        <a class="weatherwidget-io" href="https://forecast7.com/en/44d85n123d23/monmouth/?unit=us" data-label_1="Western Oregon University" data-label_2="WEATHER" data-font="Roboto Slab" data-icons="Climacons Animated" data-theme="retro-sky">Western Oregon University WEATHER</a>
                    </div>
                    <div class="three wide column">
                        <div class="ui floating message portal">
                            <div class="ui card portal">
                                <div class="content tutor">
                                    <div class="ui centered dividing header"><p id="portal-headers-black">Digital TimeSheets</p></div>
                                    <div class="description">
                                        <a href="/TimeSheet" button class="ui fluid button">Track Hours</a>
                                    </div>
                                </div>
                            </div>
                          </div>
                        </div>
                    </div>
                <div class="row">
                    <div class="three wide column">
                        <div class="container" style="width: 100%; height: 100%; position: relative;">
                        <div class="ui floating message portal">
                            <div class="ui card portal">
                                <div class="content">
                                    <div class="ui centered dividing header"><p id="portal-headers-black">Tutoring Sessions</p></div>
                                    <div class="ui horizontal divider"></div>
                                    <div class="ui centered header"><p id="portal-headers-black">For @ViewBag.User</p></div>
                                    <div class="description">
                                        <div class="ui labeled button" tabindex="0">
                                            <div class="ui button">
                                                Approved Sessions
                                            </div>
                                            <a class="ui basic label" href="/Tutor/TutoringAppts">@ViewBag.futureSessions</a>
                                        </div>
                                        <p></p>
                                        <div class="ui labeled button" tabindex="0">
                                            <div class="ui button">
                                                Tutor Sessions
                                            </div>
                                            <a class="ui basic label" href="/Tutor/TutoringAppts">@ViewBag.allTutorSessions</a>
                                        </div>
                                    </div>
                                    <div class="ui horizontal divider"></div>
                                    <div class="ui centered header"><p id="portal-headers-black">For All Tutors</p></div>
                                    <div class="description">
                                        @{
                                            if (ViewBag.requestedSessions == 0)
                                            {
                                                <div class="ui labeled button" tabindex="0">
                                                    <div class="ui button">
                                                        Requested Sessions
                                                    </div>
                                                    <a class="ui basic label" href="/Tutor/TutoringAppts">@ViewBag.requestedSessions</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="ui labeled button" tabindex="0">
                                                    <div class="ui red button">
                                                        Requested Sessions
                                                    </div>
                                                    <a class="ui basic label" href="/Tutor/TutoringAppts">@ViewBag.requestedSessions</a>
                                                </div>
                                            }
                                        }
                                         <p></p>
                                        <div class="ui labeled button" tabindex="0">
                                            <div class="ui button">
                                                        All Sessions
                                            </div>
                                            <a class="ui basic label" href="/Tutor/TutoringAppts">@ViewBag.allDepartmentSessions</a>
                                        </div>
                                    </div>
                                </div>
                             </div>
                        </div>
                      </div>
                    </div>
                    <div class="ten wide column">
                        <div class="ui floating message portal">
                            <img class="ui fluid image" src="@Url.Content("~/Content/images/landscapes_images/" + dayOfTheMonth + ".jpg")" />
                        </div>
                        </div>
                        <div class="three wide column">
                            <div class="ui floating message portal">
                                <div class="ui card portal">
                                    <div class="content">
                                        <div class="ui centered dividing header"><p id="portal-headers-black">Upcoming Schedules</p></div>
                                        <div class="description">
                                            @foreach (var item in Model)
                                            {
                                                <div class="event">
                                                    <div class="content">
                                                        <div class="summary">
                                                            <div class="item">
                                                                <div class="content">
                                                                    <div class="ui list">
                                                                        <div class="item">
                                                                            <div class="content">
                                                                                <div class="description">@item.StartTime.DayOfWeek, @item.StartTime.ToString("MM-dd-yyyy")</div>
                                                                                <div class="description">From @item.StartTime.ToString("hh:mm tt") to @item.EndTime.ToString("hh:mm tt")</div>
                                                                                <div class="ui horizontal divider"></div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            <div class="extra content">
                                                <a href="/Tutor/TutorSchedules/Create" button class="fluid ui button" style="text-align: center;">Add New</a>
                                                <a href="/Tutor/TutorSchedules/UpdateSchedule" button class="fluid ui grey button">Manage Existing</a>
                                                <a href="/Tutor/TutoringServiceAlerts/Create" button class="fluid ui red button">Send Alert</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="row">
                    <div class="three wide column">
                       <div class="ui floating message portal">
                        <div class="ui card portal">
                            <div class="content">
                                <div class="ui centered dividing header"><p id="portal-headers-black">Need Some Help?</p></div>
                                <div class="description">
                                    <a id="portal-headers" href="/Tutor/Home/Guide"><center>Tutor User Guide</center></a>
                                </div>
                            </div>
                        </div>
                      </div>
                    </div>
                    <div class="ten wide column">
                            <div class="ui four statistics">
                                <div class="statistic">
                                    <div class="value">
                                        @ViewBag.resources
                                    </div>
                                    <div class="label">
                                        Resources
                                    </div>
                                </div>
                                <div class="statistic">
                                    <div class="value">
                                        <i class="check icon"></i> @ViewBag.completeSessions
                                    </div>
                                    <div class="label">
                                        Completed Sessions
                                    </div>
                                </div>
                                <div class="statistic">
                                    <div class="value">
                                        @ViewBag.futureSessions
                                    </div>
                                    <div class="label">
                                        Upcoming Sessions
                                    </div>
                                </div>
                                <div class="statistic">
                                    <div class="value">
                                        @ViewBag.totalGrades
                                    </div>
                                    <div class="label">
                                        Saved Grades
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="three wide column">
                        <div class="ui floating message portal">
                            <div class="ui card portal">
                                <div class="content">
                                    <div class="ui centered dividing header"><p id="portal-headers-black">Questions or Comments?</p></div>
                                    <div class="description">
                                        <center><a href="mailto: beyondthetutor@gmail.com" id="portal-headers">Email</a> our team.</center>
                                    </div>
                                </div>
                            </div>
                          </div>
                       </div>
                   </div>
            </div>
            <center>
                <span style="color: #808080; font-size: 12px;"><b>&copy; 2020  Beyond The Tutor, Khronos |</b> <a href="/Home/Privacy">Privacy Notice</a></span>
            </center>
        </div>
    </body>

@section scripts
{
    <script src="~/Scripts/displayrequestedappts.js"></script>
    <script src="~/Scripts/main.js"></script>
}