@model BeyondTheTutor.Models.SurveyModels.Question


<body class="wou-silver-bg">
    <div class="ui one column center aligned stackable page grid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="ui striped four wide column center aligned table table-schedule">
                <thead style="text-align: center;">
                    <tr>
                        <th>
                            Are you sure you want to delete this question?
                        </th>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayFor(model => model.AskingQuestion)
                        </th>
                    </tr>
                    <tr>
                        <th>
                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="ui button negative" />
                                </div>
                                <br />
                                @Html.ActionLink("Return", "Index")
                        </th>
                    </tr>
                </thead>
            </table>
        }
    </div>
</body>


@section scripts
{
    <script src="~/Scripts/main.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}