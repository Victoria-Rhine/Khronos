@model BeyondTheTutor.Models.SurveyModels.Question

<body class="wou-silver-bg">
    <div class="ui one column center aligned stackable page grid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("SurveyID", (object)ViewBag.SID)
            <table class="ui striped four wide column center aligned table table-schedule">
                <thead>
                    <tr>
                        <th>
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div style="color: red; font-size: large;">
                                        Please ask questions that can be answered with a star rating of 1 - 5
                                    </div> <br />
                                    @Html.ValidationMessageFor(model => model.AskingQuestion, "", new { @class = "text-danger" })

                                    <div class="col-md-10">
                                        <div class="ui fluid input">
                                            @Html.TextBoxFor(model => model.AskingQuestion, new { placeholder = "Example: The instructor was clear and helpful during the first few class meetings", @class = "form-control text-box single-line", style = "color: red" })
                                        </div>
                                    </div>
                                </div>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="fluid ui button schedule">Create</button>
                                </div>
                            </div>
                            <br />
                            <button class="fluid ui basic button">
                                @Html.ActionLink("Back to Surveys", "Index")
                            </button>
                        </th>
                    </tr>
                </thead>
            </table>
        }
    </div>
</body>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
