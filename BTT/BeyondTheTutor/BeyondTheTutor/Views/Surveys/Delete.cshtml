@model BeyondTheTutor.Models.SurveyModels.Survey


<body class="wou-silver-bg">
    <div class="ui one column center aligned stackable page grid">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <table class="ui striped four wide column center aligned table table-schedule">
                <thead style="text-align: center;">
                    <tr>
                        <th>
                            Are you sure you want to delete this survey?
                        </th>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayFor(model => model.Name)
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Description)
                        </td>

                    </tr>
                    <tr>
                        <th>
                            @ViewBag.Class
                        </th>
                    </tr>
                    <tr>
                        <th>
                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="ui fluid button schedule" />
                            </div>
                            <br />
                            @Html.ActionLink("Return", "Index")
                        </th>
                    </tr>
                </thead>
            </table>
        }
    </div>
</body>


@section scripts
{
    <script src="~/Scripts/main.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}