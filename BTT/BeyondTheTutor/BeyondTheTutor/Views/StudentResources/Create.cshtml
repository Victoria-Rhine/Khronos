@model BeyondTheTutor.Models.StudentResource

<body class="wou-grey-bg">
    <div class="ui one column stackable page grid schedule">
        <div class="ui form attached fluid segment">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Hidden("UserID", (object)ViewBag.CurrentUserID)
                <div class="ui attached message schedule">
                    <div class="header">
                        Welcome to student resources!
                    </div>
                    <p>Share helpful resources with your students. Refer to your <b>User Guide</b> for questions.
                </div>
                <form>
                    <div class="three fields">
                        <div class="field">
                            <h4>Resource Topic (e.g. "Python", "HTML")</h4>
                            @Html.EditorFor(model => model.Topic, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Topic, "", new { @class = "text-danger" })
                        </div>
                        <div class="field">
                            <h4>URL for Topic (i.e. Copy/Paste website address)</h4>
                            @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                        </div>
                        <div class="field">
                            <h4>How You Want Link Displayed</h4>
                            @Html.EditorFor(model => model.DisplayText, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DisplayText, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <button class="fluid ui button schedule">Submit New Resource</button>
                </form>
            }
        </div>
    </div>
</body>

@section scripts
{
    <script src="~/Scripts/main.js"></script>
}
